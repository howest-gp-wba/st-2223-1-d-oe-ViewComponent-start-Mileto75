@model IEnumerable<MoviesShowMovieViewModel>
<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-3 mx-auto">
            <a asp-controller="Movies" class="page-link" asp-action="ShowMovie" asp-route-movieId="@movie.Id">
                <img src="~/images/@movie.Image" alt="@movie.Title" class="img-fluid" />
                <div class="text-center m-2">@movie.Title</div>
            </a>
        </div>
    }
</div>